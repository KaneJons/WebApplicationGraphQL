@model WebApplicationGraphQL.DataAccess.Page
@{
    
}

<!DOCTYPE html>
<html>
<head>
    <h1 align="center">@ViewBag.Greeting,пользователь,приятного просмотра</h1> 
</head>
<body>
    <h1 align="center">таблицы аниме персонажей</h1>

    <table class="table" border="1">
        <thead>
            <tr style="background-color:#ddd;">
                <th>Имя</th>
                <th>Участие в</th>
                <th>Пол</th>
                <th>Информация</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var emp in Model.Characters)
            {
                <tr align="center">
                    <td>@emp.Name.Full <br>На японском:<p style="white-space:nowrap">@emp.Name.Native</p></td>
                    <td>
                    @String.Join(", ", emp.Media.Nodes.Select(p => p.Title.English).ToArray().Where(p=>p !=null));
                    </td>
                    <td>
                   @if (@emp.Gender == "Male")
                    {
                            <img src="https://cdn-icons-png.flaticon.com/512/3439/3439472.png" width="100" height="100">
                   }
                   else
                {
                    <img src="https://cdn-icons-png.flaticon.com/512/103/103277.png" width="100" height="100">
                }
                    </td>
                    <td>@emp.Description</td>
                </tr>
            }

        </tbody>
    </table>

</body>



</html>